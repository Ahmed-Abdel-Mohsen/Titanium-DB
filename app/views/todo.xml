<Alloy>
	<Tab title="Todo">
		<Window id="todoWin" title="Todo" class="container">
			<ListView defaultItemTemplate="elementTemplate">
				<Templates>
					<ItemTemplate name="elementTemplate">
						<View layout="vertical">
							<Label bindId="taskTitle" id="title" />
							<Label bindId="taskDescription" id="description" />
							<Label bindId="taskImage" id="image" />
							<Label bindId="taskPriority" id="priority" />
						</View>
					</ItemTemplate>
				</Templates>
				<ListSection>
				</ListSection>
			</ListView>
			<Button id="addBtn" onClick="add"></Button>
		</Window>
	</Tab>
</Alloy>